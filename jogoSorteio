import java.util.Scanner;
import java.util.Random;


class Main {
  public static void main(String[] args) {

    Random gerador = new Random();
    int x = gerador.nextInt(100);

    Scanner entrada = new Scanner(System.in);
    System.out.println("Adivinhe o número que estou pensando de 0 a 100:");
    int numero = entrada.nextInt();

    if(numero == x){
      System.out.println("Parabéns! Você acertou, eu pensei no número " + x + ".");
    }
    else {
      System.out.println("Você erroooou! Eu pensei no número " + x + ".");
    }  
    
  }
}
